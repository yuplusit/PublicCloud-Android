<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/common_id_toolbar"
        layout="@layout/layout_common_toolbar"/>


    <EditText
        android:id="@+id/feedback_id_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_230dp"
        android:layout_margin="@dimen/margin_16dp"
        android:background="@drawable/common_round_white_bg"
        android:gravity="left|top"
        android:hint="有什么问题或反馈吗？"
        android:paddingBottom="@dimen/padding_10dp"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_10dp"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_15sp" />

    <EditText
        android:id="@+id/feedback_id_tel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_45dp"
        android:layout_margin="@dimen/margin_16dp"
        android:background="@drawable/common_round_white_bg"
        android:hint="请留下你的联系方式"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_15sp" />

    <TextView
        android:id="@+id/feedback_id_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16dp"
        android:layout_marginRight="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_50dp"
        android:background="@drawable/common_round_primary_btn"
        android:gravity="center"
        android:paddingBottom="@dimen/padding_10dp"
        android:paddingTop="@dimen/padding_10dp"
        android:text="提交反馈"
        android:textColor="@color/common_white"
        android:textSize="@dimen/font_22sp" />
</LinearLayout>