<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_50dp"
        android:background="@color/colorPrimary"
        android:gravity="center">

        <com.yuplus.publiccloud.ui.widget.IconCenterEditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_35dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:background="@drawable/common_round_edittext_bg"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="@dimen/padding_5dp"
            android:gravity="center_vertical"
            android:hint="@string/common_edittext_hint"
            android:imeOptions="actionSearch"
            android:padding="@dimen/padding_5dp"
            android:paddingLeft="@dimen/padding_5dp"
            android:paddingRight="@dimen/padding_5dp"
            android:singleLine="true"
            android:textSize="@dimen/font_14sp"/>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/device_id_recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>