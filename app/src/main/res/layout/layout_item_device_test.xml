<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_50dp"
    android:background="@drawable/item_touch_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/padding_16dp"
    android:paddingRight="@dimen/padding_16dp">

    <TextView
        android:id="@+id/test_id_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="温度"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_13sp" />

    <TextView
        android:id="@+id/test_id_value"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="28C"
        android:textColor="@color/font_secondary"
        android:textSize="@dimen/font_13sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test_id_time_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-05-05"
            android:textColor="@color/font_secondary"
            android:textSize="@dimen/font_12sp" />

        <TextView
            android:id="@+id/test_id_time_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:05:05"
            android:textColor="@color/font_secondary"
            android:textSize="@dimen/font_12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:text="查看>>"
        android:textColor="@color/common_warning"
        android:textSize="@dimen/font_13sp" />
</LinearLayout>