<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/alert_id_all_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow_bg"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/alert_id_all_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:minWidth="@dimen/width_30dp"
                android:textColor="@color/common_text_color_gray_to_primary"
                android:textSize="@dimen/font_25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:paddingRight="@dimen/padding_10dp"
                android:text="全部"
                android:textColor="@color/common_text_color_black_to_primary"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alert_id_new_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow_bg"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/alert_id_new_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:minWidth="@dimen/width_30dp"
                android:textColor="@color/common_text_color_gray_to_primary"
                android:textSize="@dimen/font_25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:text="新产生"
                android:textColor="@color/common_text_color_black_to_primary"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alert_id_dealing_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow_bg"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/alert_id_dealing_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:minWidth="@dimen/width_30dp"
                android:textColor="@color/common_text_color_gray_to_primary"
                android:textSize="@dimen/font_25sp" />/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:paddingRight="@dimen/padding_5dp"
                android:text="处理中"
                android:textColor="@color/common_text_color_black_to_primary"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/alert_id_finish_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shadow_bg"
            android:clickable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="@dimen/padding_10dp"
            android:paddingTop="@dimen/padding_10dp">

            <TextView
                android:id="@+id/alert_id_finish_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/height_30dp"
                android:minWidth="@dimen/width_30dp"
                android:textColor="@color/common_text_color_gray_to_primary"
                android:textSize="@dimen/font_25sp" />/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-5dp"
                android:paddingRight="@dimen/padding_5dp"
                android:text="已解决"
                android:textColor="@color/common_text_color_black_to_primary"
                android:textSize="@dimen/font_14sp" />
        </LinearLayout>
    </LinearLayout>

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/alert_id_recylerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_8dp"
        android:background="@color/common_white" />
</LinearLayout>