<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/width_120dp"
              android:layout_height="@dimen/width_120dp"
              android:layout_gravity="center"
              android:gravity="center"
              android:background="@drawable/common_progress_hub_bg"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ProgressBar
            android:layout_width="@dimen/width_50dp"
            android:layout_height="@dimen/height_50dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/progress_hub_id_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:textColor="@color/progress_hub_text_color"
            android:textSize="@dimen/margin_15dp"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
