<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message_id_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_25sp" />

        <TextView
            android:id="@+id/message_id_icon_dig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_id_icon"
            android:layout_marginLeft="-8dp"
            android:background="@drawable/common_little_red_point_bg"
            android:paddingBottom="@dimen/padding_1dp"
            android:paddingLeft="@dimen/padding_4dp"
            android:paddingRight="@dimen/padding_4dp"
            android:paddingTop="@dimen/padding_1dp"
            android:text="13"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_10sp"/>
    </RelativeLayout>

</LinearLayout>