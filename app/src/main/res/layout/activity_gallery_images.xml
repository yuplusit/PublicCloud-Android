<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/common_black"
                android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.yuplus.publiccloud.ui.widget.PhotoViewPager
            android:id="@+id/gallery_id_photoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/gallery_id_dig_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:background="@color/common_half_transparent"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_2dp"
            android:paddingLeft="@dimen/padding_15dp"
            android:paddingRight="@dimen/padding_15dp"
            android:paddingTop="@dimen/padding_2dp">

            <TextView
                android:id="@+id/gallery_id_current_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/common_white"
                android:textSize="@dimen/font_14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_2dp"
                android:layout_marginRight="@dimen/margin_2dp"
                android:text="/"
                android:textColor="@color/common_white"
                android:textSize="@dimen/font_16sp"/>

            <TextView
                android:id="@+id/gallery_id_all_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="@color/common_white"
                android:textSize="@dimen/font_15sp"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_48dp"
        android:background="@color/common_half_transparent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/common_id_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/btn_shadow_bg"
            android:paddingLeft="@dimen/padding_16dp"
            android:paddingRight="@dimen/padding_16dp"
            android:src="@drawable/ic_common_back"/>

        <TextView
            android:id="@+id/common_id_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="@dimen/width_200dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/common_white"
            android:textSize="@dimen/font_18sp"/>
    </RelativeLayout>

</RelativeLayout>